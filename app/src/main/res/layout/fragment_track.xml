<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="10sp"
    tools:context=".TrackFragment">
    <TextView
        android:id="@+id/et_busid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_edit_text"
        android:hint="Select Bus"
        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="@color/hintcolor"/>
 <TextView
        android:id="@+id/et_bus_route"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_edit_text"
        android:hint="Route"
        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:padding="10dp"
        android:maxLines="5"
        android:textColor="@android:color/black"
        android:textColorHint="@color/hintcolor"/>

    <Button
        android:id="@+id/btnTrackBus"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:background="@drawable/on_click_btn_change_color"
        android:padding="15sp"
        android:text="Track"
        android:textAllCaps="false"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/tv_lat_lng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="645864"
        android:visibility="gone"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>